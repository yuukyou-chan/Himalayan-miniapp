/* pages/radio/radio.wxss */
/* 美化头部文字 */
.hmly-radio-top{
  width: 100%;
  height: 340rpx;
  background-color: #312d3c;
}
.hmly-text{
  color: #fff;
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
}
/* 美化头部广播区域 */
.hmly-radio-scroll{
  white-space: nowrap;
	width: 100%;
	height: 300rpx;
	box-sizing: border-box;
}
.hmly-radio-scroll-item{
  margin-top: 20rpx;
  display: inline-block;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.hmly-radio-scroll-item image{
  width: 200rpx;
	height: 200rpx;
	margin-top: 10rpx;
	border-radius: 15rpx;
}
.hmly-radio-scroll-item view{
  color: #fff;
  font-size: 26rpx;
  margin-top: 6rpx;
}
/* 美化中间的找电台区域 */
.hmly-mid{
  width: 100%;
  height: 140rpx;
  margin-top: 20rpx;
  line-height: 140rpx;
}
/* 底部展示栏美化 */
.hmly-content {
	width: 100%;
	display: flex;
  justify-content:space-around;
}
.hmly-content-item{
  width: 80%;
	display: flex;
	align-items: center;
	padding: 40rpx;
  border-radius: 25rpx;
  box-shadow: 0px 7px 6px 1px rgba(0, 0, 0, 0.2);
}
.hmly-content-item image {
	width: 140rpx;
	height: 140rpx;
	margin-right: 40rpx;
	border-radius: 15rpx;
	border: 4rpx solid #eeeeee;
}
.hmly-content-left {
	padding: 10rpx 0rpx;
	margin-left: 30rpx;
	width: 60%;
	height: auto;
	border-bottom: 1rpx solid #f1f1f1;
}
.hmly-content-title {
	font-size: 35rpx;
	height: 40rpx;
	color: #000;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	/*行数n*/
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}
.hmly-content-title-vice{
	height: 40rpx;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	/*行数n*/
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 30rpx;
	text-align: left;
	color: #ccc;
	margin-top: 15rpx;
}

.hmly-count {
	font-size: 27rpx;
	color: #ccc;
	margin-top: 15rpx;
}
/* 美化分类窗口 */
.hmly-cate{
  display: flex;
  flex-wrap: wrap;
}
.hmly-cate-item{
  margin: 20rpx;
  width: 200rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding: 10rpx 0; 
  line-height: 50rpx;
  text-align: center;
  background-color: #eeeeee;
  border-radius: 100rpx;
}